<% content_for :left_column do%>
<h1>All Posts</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Author</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post|%>
    <tr>
      <td><%= post.title%></td>
      <td><%= post.content%></td>
      <td><%= "#{post.user_id}" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<% content_for :middle_column do%>
  <h1>New Post</h1>

  <% if flash[:errors] %>
      <% flash[:errors].each do |e| %>
        <p class="alert alert-danger"><%= e %></p>
      <% end %>
    <% end %>

  <form action="" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <label>Title:
      <p><input type="text" name="post[title]">
      </label>
    </p>
    <label>Comment:
      <p>
      <input type="text" name="post[content]">
    </label>
  </p>
    <label>Author:
      <p>
      <select name="post[user]">
        <% @users.each do |user| %>
  				<option value="<%= user.id %>"><%= user.first_name %></option>
  		  <% end %>
      </select>
    </label>
  </p>
  <p>
    <input class='btn btn-primary' type="submit" value="Post">
  </p>
  </form>
  <% end %>

  <% content_for :right_column do%>
  <h1>Go to Users Page</h1>

  <a href='/users'><button type="button" class='btn btn-primary'>All Users</button></a>







<% end %>
