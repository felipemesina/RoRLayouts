<% content_for :all_users do%>
<h1>All Users</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Favorite Language</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user|%>
    <tr>
      <td><%= user.first_name%></td>
      <td><%= user.last_name%></td>
      <td><%= user.favorite_language%></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<% content_for :new_user do%>
<h1>New User</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p class="alert alert-danger"><%= e %></p>
  <% end %>
<% end %>


<form action="/users" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label>First Name:
    <p>
      <input type="text" name="user[first_name]"></label>
    </p>
  <label>Last Name:
    <p>
    <input type="text" name="user[last_name]"></label>
    </p>
  <label>Favorite Language:
    <p>
    <input type="text" name="user[favorite_language]"></label><br>
    </p>
  <input class='btn btn-primary' type="submit" value="Submit">
</form>

<br><br>
<a href='/posts'><button class='btn btn-primary' type="button">All Posts</button></a>

<% end %>
